<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane fx:id="registrationView" hgap="10" vgap="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
          fx:controller="app.mealapp2.Controllers.RegistrationController" prefHeight="1080" prefWidth="1920">
    <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Label text="Surname:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="surnameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Button fx:id="checkUserButton" onAction="#registerUser" text="Registration" GridPane.rowIndex="2"/>
</GridPane>
