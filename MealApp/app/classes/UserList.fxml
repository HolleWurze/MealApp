<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" spacing="20" xmlns:fx="http://javafx.com/fxml" fx:controller="app.mealapp2.Controllers.UserListController">
    <!-- Заголовок окна -->
    <Label text="Users who forgot to order:" />

    <!-- Список пользователей -->
    <ListView fx:id="usersListView" prefHeight="300" prefWidth="400" />

    <!-- Кнопка закрытия -->
    <Button text="Close" fx:id="closeButton" onAction="#closeButtonPressed"/>
</VBox>

